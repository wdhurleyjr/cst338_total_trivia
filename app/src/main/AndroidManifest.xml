<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Cst338_total_trivia"
        tools:targetApi="31">

        <!-- Main Activity with Intent Filter -->
        <activity
            android:name=".Activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Additional Activities -->
        <activity
            android:name=".Activities.CreateAccountActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.CreateGameActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.GameActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.LandingPageActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.LeaderboardActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.UserManagementActivity"
            android:exported="false" />

    </application>

</manifest>
